<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment_account"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="4dp"
                        android:translationZ="@dimen/cardview_default_elevation"
                        android:clickable="false"
                        app:layout_scrollFlags="scroll"
                        android:foreground="?android:attr/selectableItemBackground">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/user_name_input_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/user_name_input_et"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="用户名"/>
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="4dp"
                        android:translationZ="@dimen/cardview_default_elevation"
                        android:clickable="false"
                        app:layout_scrollFlags="scroll"
                        android:foreground="?android:attr/selectableItemBackground">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/pass_word_input_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/pass_word_input_et"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:inputType="textPassword"
                                android:hint="密  码"/>
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="4dp"
                        android:translationZ="@dimen/cardview_default_elevation"
                        android:clickable="false"
                        app:layout_scrollFlags="scroll"
                        android:foreground="?android:attr/selectableItemBackground">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/phone_number_input_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/phone_number_input_et"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:inputType="number"
                                android:hint="手机号"/>
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="4dp"
                        android:translationZ="@dimen/cardview_default_elevation"
                        android:clickable="false"
                        app:layout_scrollFlags="scroll"
                        android:foreground="?android:attr/selectableItemBackground">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/nick_name_input_l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/nick_name_input_et"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="昵  称"/>
                        </android.support.design.widget.TextInputLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/register_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp"
                android:translationZ="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:layout_scrollFlags="scroll"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="注册"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/login_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp"
                android:translationZ="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:layout_scrollFlags="scroll"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="登录"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/logout_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp"
                android:translationZ="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:layout_scrollFlags="scroll"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="注销"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cancel_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="4dp"
                android:translationZ="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:layout_scrollFlags="scroll"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="取消"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>




    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/loading_view"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <include android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/load_error_view"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>