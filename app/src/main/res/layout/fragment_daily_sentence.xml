<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment_account"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/daily_sentence_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/share_wechat_friends_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/share_wechat_friends_icon"/>
            <ImageView
                android:id="@+id/share_wechat_friend_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/share_wechat_friend_icon"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/daily_sentence_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/loading_view"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <include android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/load_error_view"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>