<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/music_detail_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.zxl.casual.living.custom.view.LrcView
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dd999999"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/music_detail_lrc_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/music_play_pause_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/play_icon"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/music_detail_lrc_tv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="词"
            android:textSize="14sp"
            android:textColor="#757575"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>